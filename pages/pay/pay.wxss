/* pages/pay/pay.wxss */
page {
  background-color: #f2f2f2;
}
.scroll {
  height: calc(100vh - 100rpx);
}
.addressInfo {
  height: 150rpx;
  padding: 20rpx;
  border-radius: 10px;
  margin: 20rpx 20rpx;
  background-color: #fff;
  box-shadow: 0 0 1rpx #ccc;
}
.father {
  display: flex;
}
.father view:last-child{
  margin-left: 20rpx;
  font-size: 26rpx;
  padding-top: 10rpx;
}
.city {
  margin-top: 20rpx;
  font-size: 26rpx;
}
.container {
  display: flex;
  height: 200rpx;
  border-radius: 10px;
  margin: 10rpx 20rpx;
  background-color: #fff;
  align-items: center;
  box-shadow: 0 0 1rpx #ccc;

}
.title {
  font-size: 26rpx;
  padding-bottom: 30rpx;
}
.imageBox {
  flex: 1;
  width: 100rpx;
  padding-left: 10rpx;
}
.imageBox image {
  width: 80%;
}
.right {
  flex: 4;
}
.rightBottom {
  display: flex;
}
.price {
  flex: 1;
  margin: 0 auto;
}
.count {
  width: 50rpx;
  padding-right: 10rpx;
}
.commit {
  position: fixed;
  bottom: 0;
  display: flex;
  line-height: 100rpx;
  width: 100vw;
  justify-content: flex-end;
  background-color: #fff;
}
.gong {
  color: #b3b3b3;
  font-size: 25rpx;
}
.heji {
  margin: 0 15rpx;
}
.b {
  font-size: 22rpx;
  color: var(--themeColor);
}
.s {
  color: var(--themeColor);
  font-weight: 700;
}
.ding {
  width: 150rpx;
  background: linear-gradient(90deg, #fe8200, #fe5100);
  border-radius: 40rpx;
  color: #fff;
  height: 80rpx;
  margin-top: 10rpx;
  text-align: center;
  font-size: 26rpx;
  line-height: 80rpx;
}