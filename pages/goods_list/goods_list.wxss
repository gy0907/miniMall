/* pages/goods_list/goods_list.wxss */
.goods_item {
  display: flex;
  border-bottom: 1px solid #ccc;
  border-radius: 0;
}
.left {
  flex: 2;
  margin: 10rpx 20rpx 10rpx 0;
}
.left image {
  width: 100%;
}
.right {
  flex: 5;
}
.goods_title {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.goods_price {
  margin-top: 20rpx;
  color: var(--themeColor);
  font-size: 34rpx;
}
